<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Tile</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{id}}">{{title}}</a></td>
            <td>{{formatDate date 'MMMM do YYYY' }}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td class="right-align">
                <a href="/stories/edit/{{id}}" class="btn blue"><i class="fa fa-pencil"></i></a>
                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn red"><i class="fa fa-remove"></i></button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}